<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ootb.com.whenhubbe.AddEvent"
    tools:showIn="@layout/activity_add_event">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <EditText
            android:id="@+id/name"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:hint="Tournament Name"
            android:inputType="textCapSentences"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />

        <EditText
            android:id="@+id/city"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:hint="Tournament City"
            android:inputType="textCapSentences"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />

        <Spinner
            android:id="@+id/region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/startDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/region"
            android:layout_marginRight="5dp"
            android:text="Start Date:"
            android:textSize="24sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startDate"
            android:layout_toRightOf ="@+id/startDateLabel"
            android:layout_below="@+id/region"
            android:layout_marginBottom="15dp"
            android:textSize="24sp"
            android:hint="Start Date"
            android:clickable="true"/>

        <TextView
            android:id="@+id/endDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/startDate"
            android:layout_marginRight="5dp"
            android:text="End Date:"
            android:textSize="24sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/endDate"
            android:layout_toRightOf ="@+id/endDateLabel"
            android:clickable="true"
            android:textSize="24sp"
            android:hint="End Date"
            android:layout_below="@+id/startDate"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
